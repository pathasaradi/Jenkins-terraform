pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = "ap-south-1"
        TF_WORKDIR         = "envs/dev"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/pathasaradi/Jenkins-terraform.git'
            }
        }

        stage('Load AWS Credentials') {
            steps {
                withCredentials([[ 
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-access-key'
                ]]) {
                    sh 'echo "AWS credentials loaded"'
                }
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${env.TF_WORKDIR}") {
                    sh 'terraform init -reconfigure'
                }
            }
        }

        stage('Approval Before Destroy') {
            steps {
                input message: '⚠️ WARNING: Do you really want to DESTROY all AWS infrastructure?'
            }
        }

        stage('Terraform Destroy') {
            steps {
                dir("${env.TF_WORKDIR}") {
                    sh 'terraform destroy -auto-approve'
                }
            }
        }
    }
}
